<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Add a RelativeLayout to contain both the image and the button -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Your existing ImageView -->
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="190dp"
                android:layout_height="190dp"
                app:srcCompat="@drawable/act"
                android:scaleType="centerCrop" />

            <!-- Add a Button on top of the image with appropriate layout params -->
            <Button
                android:id="@+id/imageButton"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/transparent"
                android:layout_marginStart="140dp"
                android:foreground="@drawable/baseline_add_circle_24"
                android:text="Button" />
        </RelativeLayout>

        <!-- Rest of your existing layout -->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99,99$"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
