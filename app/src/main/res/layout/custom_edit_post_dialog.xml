<!-- custom_event_dialog.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_edit_note_24"
        android:layout_gravity="center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:text="Edit Post"
            android:textAlignment="viewStart"
            android:textColor="@color/darkBlue"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="39dp"
            android:layout_height="42dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_clear_24"

            />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/baseline_textsms_dark_blue_24"
            android:hint="Post Description" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- <Button
        android:id="@+id/addEventImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/gray"
        android:textColor="@color/darkBlue"
        android:drawableTop="@drawable/baseline_add_photo_alternate_24"
        android:text="Add Post image"

        android:layout_marginBottom="10dp"
        />
    <ImageView
        android:id="@+id/imageSelected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:src="@drawable/baseline_clear_24"
        /> -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="#A8F43B3B"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/submit"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@color/darkBlue"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
